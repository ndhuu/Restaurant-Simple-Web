<!DOCTYPE html>
<html>

<head>
	<!-- Page Title -->
	<title>Confirmed</title>
	<link rel='stylesheet' href='/stylesheets/style.css' />

	<!-- Bootstrap -->
	<link type="text/css" rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

	<!-- Google font -->
	<link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">

</head>

<body>
	<% include ../partials/owner_menu %>

	<div class="container-fluid">
		<div class="row">
			<nav class="col-md-2 d-none d-md-block bg-light sidebar">
				<div class="sidebar-sticky">
					<ul class="nav flex-column">
						<li class="nav-item">
							<div class="container">
								<div class="card card-register mx-auto mt-5">
									<div class="card-body">
										<form action=<%=sample_link.pending_page%> method="get">
											<button class="btn btn-lg btn-primary btn-block" type="submit">Pending</button>
										</form>
										<form action=<%=sample_link.confirmed_page%> method="get">
											<button class="btn btn-lg btn-primary btn-block"  type="submit">Confimed</button>
										</form>
										<form action=<%=sample_link.completed_page%> method="get">
											<button class="btn btn-lg btn-primary btn-block" type="submit">Completed</button>
										</form>
									</div>
								</div>
							</div>

						</li>
					</ul>
				</div>
			</nav>
			<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
				<h2>My Restaurant's Reservations</h2>
				<div class="row">
					<div class="col-md-10">
					</div>
				</div>
				<div class="row">
					<p> </p>
				</div>
				<div
					class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
					<!-- Example row of columns -->

					<table class="table">
						<thead class="thead-dark">
							<tr>
								<th scope="col">Diner Name</th>
								<th scope="col">NumPax</th>
								<th scope="col">Date</th>
								<th scope="col">Time</th>
								<th scope="col">Rating</th>
								<th scope="col"></th>
							</tr>
						</thead>
						<tbody>

							<% for(var i=0; i<data.length; i++) { %>
							<tr>
								<td><%-data[i].dname%></td>
								<td><%-data[i].numpax%></td>
								<td><%- data[i].date%></td>
								<td><%- data[i].time%></td>
								<td><%- data[i].rating%></td>
								<td>
									<form action=<%=data[i].action%> method="post">
										<input type="hidden" id="dname" name="dname" value="<%-data[i].dname%>">
										<input type="hidden" id="rname" name="rname" value="<%-data[i].rname%>">
										<input type="hidden" id="date" name="date" value="<%-data[i].date%>">
										<input type="hidden" id="time" name="time" value="<%-data[i].time%>">
										<input type="hidden" id="address" name="address" value="<%-data[i].address%>">
										<button type="submit">Complete</button>
									</form>
								</td>
							</tr>
							<% } %>
						</tbody>
					</table>
				</div>
			</main>
		</div>

	</div>
	<!-- /container -->
	</div>
</body>

</html>